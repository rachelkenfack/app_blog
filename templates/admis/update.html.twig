                <input type='text' name='contenu' class="form-control " value="{{article_recuperer.contenu}}" />
            </div>
            <div class="form-group">
                <label for='piece'>Pieces jointes</label>
                <input type='file' name='piece' class="form-control " value="{{article_recuperer.piecejointe}}"/>
            </div>
            <br><br>
                <div class="form-group">
                <input type='submit' value='update'  class="btn btn-primary"/>
                </div>
                

    </form>
{% endblock %}
