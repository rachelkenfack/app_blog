{% block title %}Hello AdmisController!{% endblock %}

{% block body %}


<br><br><br><br><br><br><br><br>
<div class="container">
       {% for msg in app.flashes('notif') %}
        <div class="alert alert-success">{{msg}}</div>
       {% endfor %}
    <form method='post' action="{{path('app_content',{'id':article_recuperer.id})}}" enctype='multipart/form-data'> {# pour signaler au form qu'on vas envoyer les fichier bbinaire non texteul #}
