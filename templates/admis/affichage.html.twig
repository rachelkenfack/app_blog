{% extends 'baseAdmis.html.twig' %}

{% block title %}Hello adminController!{% endblock %}

{% block body %}


<div class="example-wrapper" style="font-size:20px">
<br><br><br>
    <div class="bg-image" style="background-image: url('{{asset('/images/articles/res-1.jpg')}}'); width:auto; background-position: center; background-repeat: no-repeat; background-size: cover;">
  <br><br><br>  <br><br><br>
     
       <div class="container">
    <table class="table table-black">
        <tr class="table-danger">
